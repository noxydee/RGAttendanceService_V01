@page
@model RGAttendanceService_V00.Pages.Login.RGRegisterModel
@{
    ViewData["title"] = "Zarejestruj";
}

<head>

</head>
<body>
    <form method="post">
        <div class="row mb-3">
            <div class="form-group col-sm-4">
                <label asp-for="RGUser.UserName" class="control-label"></label>
                <input asp-for="RGUser.UserName" class="form-control" />
                <span asp-validation-for="RGUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-4">
                <label asp-for="RGUser.Password" class="control-label"></label>
                <input type="password" asp-for="RGUser.Password" class="form-control" />
                <span asp-validation-for="RGUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-4">
                <label asp-for="RGUser.Email" class="control-label"></label>
                <input asp-for="RGUser.Email" class="form-control" />
                <span asp-validation-for="RGUser.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <label class="control-label">Trener</label>
                <select asp-for="RGUser.CoachId" class="form-control" >
                    <option value="0">None</option>
                    @foreach(var x in Model.Coaches)
                    {
                        <option value="@x.Id">@x.FirstName @x.LastName</option>
                    }
                </select>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <input type="submit" class="btn btn-primary submitButtonCustom" />
            </div>
            <div class="col-sm-4"></div>
        </div>
    </form>
</body>