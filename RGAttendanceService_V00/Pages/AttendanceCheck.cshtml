@page
@model RGAttendanceService_V00.Pages.AttendanceCheckModel
@{
    ViewData["title"] = "Obecność";
}

<head>

</head>
<body>
    <div class="container">
        <h1>Sprawdz obecność grupy @Model.Group</h1>
        <form method="post" class="form-check">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => Model.AttendanceList[0].Participant.FirstName)</th>
                        <th scope="col">@Html.DisplayNameFor(model => Model.AttendanceList[0].Participant.LastName)</th>
                        <th scope="col" class="text-center">@Html.DisplayNameFor(model => Model.AttendanceList[0].AbsenceStatus)</th>
                        <th scope="col">@Html.DisplayNameFor(model => Model.AttendanceList[0].AbsenceInfo)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.AttendanceList.Count; i++)
                    {
                        <input asp-for="@Model.AttendanceList[i].ParticipantId" type="hidden" />
                        <tr>

                            <td>@Html.DisplayFor(p => Model.AttendanceList[i].Participant.FirstName)</td>
                            <td>@Html.DisplayFor(p => Model.AttendanceList[i].Participant.LastName)</td>
                            <td class="text-center"><input asp-for="@Model.AttendanceList[i].AbsenceStatus" type="checkbox" class="my_checkbox"></td>
                            <td><input asp-for="@Model.AttendanceList[i].AbsenceInfo" class="form-control" /></td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn btn-primary submitx">Zatwierdź</button>
                </div>
            </div>
        </form>

    </div>

</body>
