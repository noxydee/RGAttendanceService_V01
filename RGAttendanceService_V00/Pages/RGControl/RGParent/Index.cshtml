@page
@model RGAttendanceService_V00.Pages.RGControl.RGParent.IndexModel

@{
    ViewData["Title"] = "Rodzic";
}


<div class="row">
    <div class="col-sm-6">
        <h1>Rodzic</h1>
    </div>
    <div class="col-sm-6">
        <p class="text-sm-right">
            <a asp-page="Create" class="submitButtonCustom">Create New</a>
        </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Relation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent[0].Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parent)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Relation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="submitButtonCustom">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="submitButtonCustom">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="submitButtonCustom">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
