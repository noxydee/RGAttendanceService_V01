@page
@model RGAttendanceService_V00.Pages.RGControl.RGGroup.IndexModel

@{
    ViewData["Title"] = "Grupa";
}

<div class="row">
    <div class="col-sm-6">
        <h1>Grupa</h1>
    </div>
    <div class="col-sm-6">
        <p class="text-sm-right">
            <a asp-page="Create" class="submitButtonCustom">Create New</a>
        </p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group[0].Coach)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Group)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach.FirstName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="submitButtonCustom">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="submitButtonCustom">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="submitButtonCustom">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
