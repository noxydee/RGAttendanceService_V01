@page
@model RGAttendanceService_V00.Pages.RGControl.RGRelation.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Jesteś pewnien że chcesz usunąć tą relacje?</h3>
<div>
    <h4>Relacja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParticipantParents.Kid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipantParents.Kid.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParticipantParents.Parent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipantParents.Parent.FirstName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ParticipantParents.ParticipantId" />
        <input type="hidden" asp-for="ParticipantParents.ParentId" />
        <input type="submit" value="Delete" class="submitButtonCustom" /> |
        <a asp-page="./Index" class="submitButtonCustom">Wróć do listy</a>
    </form>
</div>
